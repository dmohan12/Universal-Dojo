<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
</head>


<% @videos.each  do |v| %>
    <h3>Title: <%= v.title  %></h3> 
    <h4>Description: <%= v.description  %></h4>
    <a data-fancybox href="<%=v.video_url %>">
       <strong> <%=v.title%> </strong>
    </a>
    <br>
    
    <strong> Tags: </strong>
    <%@tags.each do |t|%>
        
        <%if t.video_id == v.id%>
             <%=t.tag_name%> 
        <%end%>
        <%#t.destroy%>
    <%end%>
    <br>
    <strong> Comments: </strong>
    <br>
    <%@comments.each do |c|%>
        
        <%if c.video_id == v.id%>
            <%=current_user.email%> said: <%=c.text%>
            <br>
        <%end%>

        <%#c.destroy%>
    <%end%>  

    <form action="/post/<%=v.id%>/comment" method="get">
        Enter comment: <input type="text" name="text">
        <button type="submimt" class="button" name="comment"> Send </button>
    </form>
    
    <form action="/post/<%=v.id%>/delete" method="get">
        <button  type="sumbit" class="button" name="id" > Delete </button>
    </form>

    ----------
    <br>
    <br>

    <%#v.destroy%>

<% end %>





<script src="//code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>

