<form action="/post/create" method="post" enctype="multipart/form-data">
    
        <legend>Video information:</legend>
        <div class="box"> 
            Title:<br>
            <input type="text" name="title"><br>
            Description:<br>
            <input type="text" name="description"><br>
            Video URL:<br>
            <input type="text" name="video_url" class="vid_form">
        </div>

        <h3>OR</h3>


    <div class="box">
        <div class="custom-file">
            <input type="file"  name="video" class="custom-file-input fileInput shorten" id="customFile" ><br>
            <label class="custom-file-label" for="customFile"></label>
        </div>

            <h3>Tags</h3>
            <input type="text" name="tag_name"><br>
            <input type="submit" style= "margin: 5px;"value="Submit"><br>
        
    </div>
</form>

<script type="application/javascript">  
    $('input[type="file"]').change(function(e){
        var fileName = e.target.files[0].name;
        $('.custom-file-label').html(fileName);
    });
</script>

